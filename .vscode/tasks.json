{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PlatformIO",
            "type": "shell",
            "command": "scripts/OpenKNX-Build.ps1",
            "args": [
                "release_RP2040"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload JLINK",
            "type": "shell",
            "command": "scripts/OpenKNX-Build.ps1",
            "args": [
                "upload_JLINK_RP2040",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload ATMEL",
            "type": "shell",
            "command": "scripts/OpenKNX-Build.ps1",
            "args": [
                "upload_ATMEL_RP2040",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload USB",
            "type": "shell",
            "command": "scripts/OpenKNX-Build.ps1",
            "args": [
                "upload_USB_RP2040",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "OpenKNXproducer",
            "type": "shell",
            "command": "${env:USERPROFILE}\\bin\\OpenKNXproducer.exe",
            "args": [
                "create",
                "--Debug",
                "--HeaderFileName",
                "include/knxprod.h",
                "src/GardenControl"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Build-Release",
            "type": "shell",
            "command": "scripts/Build-Release.ps1",
            "args": [],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "resolve platformio.ini",
            "type": "shell",
            "command": "~/.platformio/penv/Scripts/pio",
            "args": [
                "project",
                "config",
                ">platformio.ini.full.txt"
            ],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}